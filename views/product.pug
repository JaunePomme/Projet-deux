extends layouts/frontend

block content
    .ui.middle
        h1 #{furniture}
            each val in material
                li= val    
        div
            h1 Matériau utilisé : #{category}
        div
            h1 Entreprise : #{company}
        div
            if (company == 'Bbois')
                img(src='/images/bois.jpg' width='800' height='800')
            if (company == 'Metalo')
                img(src='/images/metal.jpg' width='800' height='800')
            if (company == 'Pplastique')
                img(src='/images/plastique.jpg' width='800' height='800')  
            if (company =='Metalo,pPlastique')
                img(src='/images/plastique.jpg' width='800' height='800')
                img(src='/images/bois.jpg')

